---
import { PriceCompare } from "../components/PriceCompare";
import Layout from "../layouts/Layout.astro";
import "@fontsource-variable/rubik";
---

<Layout title="Comparador de preço de unidades">
  <main class="mx-auto max-w-lg p-6">
    <div class="mb-8">
      <h1 class="text-2xl font-bold">Preço por quilo ou litro</h1>
      <div class="mt-2 text-neutral-600">
        Adicione o peso ou volume do produto e seu preço pra saber qual deles
        compensa mais.
      </div>
    </div>

    <PriceCompare client:load />
  </main>
</Layout>
