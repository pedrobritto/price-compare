---
import { PriceCompare } from "../components/PriceCompare";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Comparador de preço de unidades">
  <main class="p-6">
    <div class="mb-6">
      <h1 class="text-xl font-bold">Comparador de preços</h1>
      <div class="mt-2 text-sm text-neutral-600">
        Adicione o peso ou volume do produto e seu preço pra saber qual deles
        compensa mais.
      </div>
    </div>

    <PriceCompare client:load />
  </main>
</Layout>
